{
  "name": "@vseplet/pflow",
  "version": "1.0.0",
  "license": "MIT",
  "tasks": {
    "test": "deno test --allow-all",
    "test:watch": "deno test --allow-all --watch",
    "test:coverage": "deno test --allow-all --coverage=coverage && deno coverage coverage",
    "check": "deno fmt --check && deno lint && deno test --allow-all --no-check"
  },
  "imports": {},
  "exports": {
    ".": "./source/mod.ts",
    "./types": "./source/types.ts"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any", "require-await", "no-unused-vars"]
    }
  }
}
